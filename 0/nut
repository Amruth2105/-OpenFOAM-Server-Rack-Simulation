FoamFile
{
    format      ascii;
    class       volScalarField;
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            calculated;
        value           $internalField;
    }
    
    outlet
    {
        type            calculated;
        value           $internalField;
    }
    
    floor
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    
    ceiling
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    
    frontAndBack
    {
        type            nutkWallFunction;
        value           $internalField;
    }
}

// ************************************************************************* //
