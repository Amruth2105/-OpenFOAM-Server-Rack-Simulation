#!/bin/bash
#------------------------------------------------------------------------------
# Allclean script for Server Rack Thermal Simulation
#------------------------------------------------------------------------------

cd "${0%/*}" || exit 1

# Source OpenFOAM clean functions
. ${WM_PROJECT_DIR:?}/bin/tools/CleanFunctions

echo "Cleaning case..."

cleanCase

# Restore original 0 directory if backup exists (setFields modifies 0/)
if [ -d 0.orig ]; then
    rm -rf 0
    mv 0.orig 0
fi

echo "Done!"
