FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Continuous heat source: keeps server rack zone at 330 K
// This models servers dissipating power continuously
serverRackHeatSource
{
    type            fixedTemperatureConstraint;
    selectionMode   cellZone;
    cellZone        serverRack;

    mode            uniform;
    temperature     330;
}

