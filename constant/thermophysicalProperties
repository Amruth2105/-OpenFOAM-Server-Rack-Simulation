FoamFile
{
    format      ascii;
    class       dictionary;
    object      thermophysicalProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

thermoType
{
    type            heRhoThermo;
    mixture         pureMixture;
    transport       const;
    thermo          hConst;
    equationOfState perfectGas;
    specie          specie;
    energy          sensibleEnthalpy;
}

mixture
{
    specie
    {
        molWeight   28.9;    // Air molecular weight [kg/kmol]
    }
    thermodynamics
    {
        Cp          1005;    // Specific heat capacity [J/(kg·K)]
        Hf          0;       // Heat of formation
    }
    transport
    {
        mu          1.82e-5; // Dynamic viscosity [Pa·s]
        Pr          0.71;    // Prandtl number
    }
}

